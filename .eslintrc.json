{
    "env": {
        "browser": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "space-in-parens": [
          1,
          "always"
        ],
        "spaced-comment": [
          "error",
          "always",
          { "exceptions": ["-", "+", "/"] }
        ]
    }
}
